<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with Cancel and Save buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_btn"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/buttons"
            android:text="Cancel"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_btn"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="@drawable/buttons"
            android:text="Save"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- Alarm Volume -->

    <!-- Alarm Sound -->

    <!-- Quote Enable/Disable -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/quoteLabel"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="Quote"
            android:textSize="34sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/quote"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="180dp"
            android:layout_marginLeft="100dp"
            android:layout_toRightOf="@id/quoteLabel" />
    </RelativeLayout>

    <!-- Quiz Enable/Disable -->

    <!-- Night Mode -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/quizLabel"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:text="Quiz"
            android:textAlignment="center"
            android:textSize="34sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/quiz"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="205dp"
            android:layout_toRightOf="@id/quizLabel" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:paddingVertical="8dp">

        <TextView
            android:id="@+id/nightModeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day/Night Mode"
            android:textAlignment="textStart"
            android:textSize="34sp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/nightMode"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="30dp"
            android:layout_toRightOf="@id/nightModeLabel" />
    </RelativeLayout>

</LinearLayout>
